<h1>ユーザー登録</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :uid, 'ユーザーID' %>
  <%= f.text_field :uid %><br>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation, 'パスワード(確認)' %><br>
  <%= f.password_field :password_confirmation %>
  <%= f.submit '登録' %>
<% end %>
